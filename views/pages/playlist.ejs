<%- include("../partials/header") %>

<%- include("../partials/navigation") %>
<%- include("../partials/playlist-info") %>

<% if (locals.error) { %>
	<p class="error"><%- error %></p>
<% } else { %>
<p>Restored videos:<br>
<span class="success"><%= restoredVideos.length %></span> / <span class="danger"><%= restoredByUserVideos.length %></span> / <a class="error" href="./<%= playlist.url %>/research"><%= deletedVideos.length %></a><br>
<small>by system / by user /  deleted</small>
</p>

<ul>
	<% restoredVideos.forEach(function(video) { %>
		<li><span class="success"><%= video.title %></span></li>
	<% }) %>
	<% restoredByUserVideos.forEach(function(video) { %>
		<li><span class="danger"><%= video.user_title %></span></li>
	<% }) %>
</ul>
<% } %>

<%- include ("../partials/footer") %>

